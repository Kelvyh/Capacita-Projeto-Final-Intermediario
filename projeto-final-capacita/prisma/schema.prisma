generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


 model Usuario {
   id         Int      @id @default(autoincrement())
   nome       String
   email      String   @unique
   senha      String
   tipoUsuario String
   criadoEm   DateTime @default(now())
 }
 
 model Categoria {
   id          Int       @id @default(autoincrement())
   nome        String    @unique
   descricao   String?
   produtos    Produto[]
 }
 
 model Produto {
   id          Int       @id @default(autoincrement())
   nome        String
   descricao   String?
   preco       Float
   categoriaId Int?
   categoria   Categoria? @relation(fields: [categoriaId], references: [id])
   estoque     Estoque[]
 }
 
 model Estoque {
   id         Int       @id @default(autoincrement())
   produtoId  Int
   quantidade Int       @default(0)
   produto    Produto   @relation(fields: [produtoId], references: [id])
   atualizadoEm DateTime @default(now()) @updatedAt
 }